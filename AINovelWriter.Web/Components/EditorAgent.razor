@inherits AppComponentBase

<RadzenRow>
    <RadzenColumn Style="height:100%; display:grid; grid-template-rows:85% 15%">
        <RadzenCard Style="padding:0" Variant="Variant.Text">
            <ChatView @ref="_chatView" ViewId="editorChat" Height="77vh"></ChatView>
        </RadzenCard>
        <RadzenCard Style="position:relative" Variant="Variant.Text">
            <UserInput UserInputSubmit="HandleChatInput" IsBusy="IsBusy"></UserInput>
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>
